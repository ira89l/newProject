<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossHealthX.Views.ActivityHistoryPage"
             Title="Activity History">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Фільтри інтервалів -->
        <Picker Title="Select Interval"
                SelectedItem="{Binding SelectedInterval, Mode=TwoWay}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>All</x:String>
                    <x:String>Week</x:String>
                    <x:String>Month</x:String>
                    <x:String>Year</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <!-- Кнопка оновлення -->
        <Button Text="Load Activities"
                Command="{Binding LoadActivitiesCommand}" />

        <!-- Список активностей -->
        <CollectionView ItemsSource="{Binding Activities}"
                        SelectionMode="Single"
                        SelectionChanged="CollectionView_SelectionChanged">

            <CollectionView.EmptyView>
                <Label Text="No activities found" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"
                       FontSize="18"
                       TextColor="Gray"/>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#f0f0f0">
                        <Grid ColumnDefinitions="*, Auto, Auto">

                            <Label Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}"
                                   FontSize="16"
                                   VerticalOptions="Center"/>

                            <Label Text="{Binding Steps}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Grid.Column="1"
                                   Margin="10,0"/>

                            <Label Text="{Binding Distance, StringFormat='{0:F2} km'}"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Grid.Column="2"
                                   Margin="10,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
