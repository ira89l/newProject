<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossHealthX.Views.MainPage"
             Shell.NavBarIsVisible="false">

    <Grid RowDefinitions="*, Auto, Auto, Auto, *, Auto" Padding="20">
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <GradientStop Color="{Binding TopBackgroundColor}" Offset="0.1" />
                <GradientStop Color="{Binding BottomBackgroundColor}" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Основні показники -->
        <StackLayout Orientation="Horizontal" Grid.Row="1" HorizontalOptions="Center" Padding="5">
            <Label Text="{Binding Steps}" FontSize="72" VerticalOptions="End" TextColor="White"/>
            <Label Text=" steps" FontSize="36" VerticalOptions="End" TextColor="White" />
        </StackLayout>

        <Label Text="{Binding Date, StringFormat='{}{0:MMMM dd, yyyy}'}" 
               Grid.Row="2" 
               HorizontalOptions="Center" 
               TextColor="White" 
               FontSize="24" 
               Padding="0"/>

        <!-- Прогрес -->
        <Frame Grid.Row="3" Margin="0,20" VerticalOptions="Center" Padding="10" BackgroundColor="White" Opacity="0.6">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*">
                <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="{Binding WeekProgress}" FontSize="18" TextColor="Black"/>
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="{Binding MonthProgress}" FontSize="18" TextColor="Black"/>
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="{Binding YearProgress}" FontSize="18" TextColor="Black"/>
                </StackLayout>

                <Label Grid.Row="1" Grid.Column="0" Text="Week" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" TextColor="Black"/>
                <Label Grid.Row="1" Grid.Column="1" Text="Month" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" TextColor="Black"/>
                <Label Grid.Row="1" Grid.Column="2" Text="Year" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" TextColor="Black"/>
            </Grid>
        </Frame>

        <!-- Кнопки дій -->
        <Grid Grid.Row="5" ColumnDefinitions="*,*,*" Padding="0, 20">
            <ImageButton Source="graph_icon.png" Grid.Column="0" Clicked="GraphBtn_Clicked"/>
            <ImageButton Source="add_icon.png" Grid.Column="1" Clicked="NewBtn_Clicked"/>
            <ImageButton Source="settings_icon.png" Grid.Column="2" Clicked="SettingsBtn_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>
